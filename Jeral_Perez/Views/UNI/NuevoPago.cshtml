
@model Jeral_Perez.Models.PrestamoClientes

<h1>Registrar Nuevo Pago</h1>
<form asp-action="GuardarPago">
    <div class="col-sm-6">

        <div>
            <label for="selectcliente">Cliente:</label>
            <select class="form-control" name="IdPrestamo" id="selectcliente">
                @{
                    foreach (var prestamo in Model.Prestamos)
                    {
                        var item = Model.Clientes.Where(a => a.IdCliente == prestamo.IdCliente).FirstOrDefault();

                        <option value="@item.IdCliente">@item.Nombres @item.Apellidos </option>
                    }
                }
            </select>
        </div>
    </div>
    <div class="col-sm-6">

        <label class="col-form-label">Deuda Inicial:</label>
        <input class="form-control" type="text" placeholder="Monto" />

    </div>
    <div class="col-sm-6">

        <label class="col-form-label">Saldo Pendiente:</label>
        <input class="form-control" type="text" name="Saldo" placeholder="Saldo" />

    </div>


    <div class="col-sm-6">

        <label class="col-form-label">Cantidad a Abonar:</label>
        <input class="form-control" name="MontoPagado" type="text" placeholder="Ingrese la cantidad" />

    </div>
    <div>
        <input style="margin:10px" type="submit" value="Guardar" class="btn btn-success">
        <input style="margin:10px" type="submit" asp-controller="UNI" asp-action="Pagos" value="Cancelar" class="btn btn-secondary mx-auto">
    </div>
</form>
<br />
