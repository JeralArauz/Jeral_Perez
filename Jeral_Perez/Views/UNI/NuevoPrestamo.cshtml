
@model List<Jeral_Perez.Models.Cliente>
<h1>Registrar Nuevo Prestamo</h1>

<form asp-action="GuardarPrestamo" style="font-family:Constantia; font-size:large; color:lightseagreen">


    <div class="col-md-6">
        <label for="selectcliente">Cliente:</label>
        <select class="form-control" name="IdCliente" id="selectcliente">
            @{
                foreach (var Cliente in Model)
            {
                <option value="@Cliente.IdCliente">@Cliente.Nombres @Cliente.Apellidos</option>
            }
            }
        </select>
    </div>
    <div class="col-md-6">
            <label class="col-form-label">Monto</label>
            <input class="form-control" name="Monto" value="" type="text" placeholder="Monto" />
    </div>


    <div class="col-sm-6">

        <label class="col-form-label">Interés (%)</label>
        <input class="form-control" name="Interes" type="text" placeholder="Interés" />

    </div>
    <div class="col-sm-6">

        <label class="col-form-label">Plazo (Meses)</label>
        <input class="form-control" name="Plazo" type="text" placeholder="Plazo del Préstamo" />

    </div>

    <div class="col-md-6">
        <div>
            <input type="submit" value="Guardar" onclick="return confirm('¿Esta Seguro que desea guardar el prestamo?')" class="btn btn-success ">
            <input style="margin:10px" type="submit" asp-action="Prestamos" value="Cancelar" class="btn btn-secondary mx-auto ">
        </div>
    </div>


</form>
<br />